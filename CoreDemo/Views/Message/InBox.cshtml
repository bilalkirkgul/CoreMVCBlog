
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayoutPartial/_WriterLayout.cshtml";
}

@model List<MessageTwo>


<div class="row">
    <div class="col-lg-12 grid-margin-sm-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <code class="card-title" style="color:darkred">Gelen Mesajlarım</code>
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>#</th>
                            <th>Profil Img</th>
                            <th>İsim-Soyisim</th>
                            <th>Mesaj Konu</th>
                            <th>Alındı Tarihi</th>
                            <th></th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (MessageTwo item in Model)
                        {
                            <tr>
                                <td><b>@item.MessageID</b></td>
                                <td class="py-1">
                                    <img src="@item.SenderUser.WriterImg" alt="image">
                                </td>
                                <td>@item.SenderUser.WriterName</td>
                                <td>@item.MessageSubject</td>

                                <td>@item.MessageDate.ToString("dd-MMM-yyyy")</td>

                                <td>
                                    <a asp-controller="Message" asp-action="MessageDetails" asp-route-messageId="@item.MessageID" class="btn btn-gradient-success btn-rounded btn-fw">Oku</a>

                                </td>
                                <td> <a asp-controller="" asp-action="" asp-route-messageId="@item.MessageID" class="btn btn-gradient-danger btn-rounded btn-fw">Sil</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
                <a href="@Url.Action("")" class="btn btn-outline-primary ml-sm-auto">Yeni Mesaj Oluştur</a>
            </div>
        </div>
    </div>

</div>
