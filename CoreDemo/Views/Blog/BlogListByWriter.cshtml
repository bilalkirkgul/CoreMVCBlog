
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayoutPartial/_WriterLayout.cshtml";
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <code class="card-title" style="color:darkred">Paylaşımlarım</code>
                @*<p class="card-description">
            Add class <code>.table-hover</code>
        </p>*@
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Blog Başlığı</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Kategori</th>
                            <th>Durumu</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (Blog item in Model)
                        {
                            <tr>
                                <td>@item.BlogID</td>
                                <td>@item.BlogTitle</td>
                                <td>@item.BlogCreateDate.ToShortDateString()</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.BlogStatus</td>
                                <td><a href="" class="btn btn-outline-warning ml-sm-auto">Güncelle</a></td>
                                <td><a href="" class="btn btn-outline-danger ml-sm-auto">Güncelle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <a href="" class="btn btn-outline-primary ml-sm-auto">Yeni Blog Oluştur</a>
            </div>
        </div>
    </div>

</div>


