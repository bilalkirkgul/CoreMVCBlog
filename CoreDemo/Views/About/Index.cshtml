
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model List<About>


<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Hakkımızda</h3>
        <div class="row inner-sec">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                @foreach (var item in Model)
                {
                    <div class="blog-grid-top">

                        <div class="blog_info_left_grid">
                            <a href="single.html">
                                <img src="@item.AboutImgOne" class="img-fluid" alt="">
                            </a>
                        </div>
                        <h3>
                            @item.AboutDetailsOne
                        </h3>
                        <p>
                            @item.AboutDetailsTwo
                        </p>
                        @*<a href="single.html" class="btn btn-primary read-m">Read More</a>*@
                    </div>
                }



            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    <!--Bültene abone olma alanı-->
                    <!--burayı partial yaptım buton click olduğunda partial olduğu için farklı sayfaya gidiyor-->
                    @await Html.PartialAsync("~/Views/NewsLatter/SubscribeMail.cshtml")

                    <!--Bültena abone olma son-->
                    <!--Sosyal Medya Başlangıç-->

                    <partial name="SocialMedyaAbout" />

                    <!--Sosyal Medya Bitiş-->
                    <!--Postlar buraya dökülecek take ile son 3 tane post gönderilecek aynı post footer partiala da gönderilecek-->
                    <div class="tech-btm">
                        <h4>Son Postlar</h4>
                        @await Component.InvokeAsync("LastThreeBlog")

                    </div>

                    <!--Postlar son-->
                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>
<!--//main-->
