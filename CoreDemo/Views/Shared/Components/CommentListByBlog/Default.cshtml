



@model List<Comment>


<div class="comment-top">
    <h4>Yorumlar</h4>


    @if (ViewBag.Message != null)
    {
        <div class="media">

            <div class="media-body">
                <h5 class="mt-0">@ViewBag.Message</h5>
            </div>
        </div>
    }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/BlogTema/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">

                <h5 class="mt-0">@item.CommentUserName</h5>
                <span>
                    @item.CommentTitle.Trim(' ')
                </span>
                <p>
                    @item.CommentContent.Trim(' ')
                </p>


