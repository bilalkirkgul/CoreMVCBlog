
@model Blog
<div class="row">
    <div class="col-lg-6">
        <div class="widget navy-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Dashboard</h1>

                <h3 class="font-bold no-margins">
                    Asp .Net Core MVC
                </h3>
                <small>Projemizin bu panalinde admin işlemleri bir arae yapısı üzerinden gerçekleşmektedir. Sol tarafta yer alan Sidebardan yardım menüsü ulaşıp takıldığınız noktalarda destek alabilirsiniz.</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget lazur-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Son Eklenen Blog</h1>  
                <br />
                <h3 class="font-bold no-margins">
                 Yazarın Adı :@Model.Writer.WriterName
                </h3>
                <br />
                <h3 class="font-bold no-margins">
                Başlık :   @Model.BlogTitle
                </h3>

            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart2"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget yellw-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">$ 50,992</h1>

                <h3 class="font-bold no-margins">
                    Blog site Kazancı
                </h3>
                <small>Ürün Tanıtımları, Promosyonlar, Reklamlar, Anlaşmalar</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart3"></div>
            </div>
        </div>
    </div>

</div>